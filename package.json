{
  "name": "yummies",
  "version": "5.7.1",
  "scripts": {
    "prepare": "pnpm dev:install-hooks",
    "clean": "rm -rf dist",
    "lint:check": "pnpm exec biome check --write --no-errors-on-unmatched --files-ignore-unknown=true",
    "ts:check": "tsc --noEmit",
    "check": "npm run lint:check && npm run ts:check",
    "prebuild": "npm run clean && npm run check",
    "build:watch": "pnpm build && nodemon --watch src --ext ts --exec \"pnpm build\"",
    "build": "sborshik build --fillDist && tsx scripts/generate-utility-types-file",
    "pub": "pnpm build && sborshik publish --useDistDir",
    "pub:patch": "PUBLISH_VERSION=patch pnpm pub",
    "pub:minor": "PUBLISH_VERSION=minor pnpm pub",
    "pub:major": "PUBLISH_VERSION=major pnpm pub",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest watch --config vitest.config.ts",
    "test:coverage": "vitest run --config vitest.config.ts --coverage",
    "dev": "pnpm test:watch",
    "dev:install-hooks": "if [ -z \"$CI\" ]; then lefthook install; fi"
  },
  "keywords": [
    "javascript",
    "typescript",
    "utilities"
  ],
  "author": "js2me",
  "license": "MIT",
  "description": "Frontend utilities for JavaScript projects with open source code",
  "bugs": {
    "url": "https://github.com/js2me/yummies/issues"
  },
  "homepage": "https://github.com/js2me/yummies",
  "repository": {
    "type": "git",
    "url": "git://github.com/js2me/yummies"
  },
  "peerDependencies": {
    "mobx": "^6.12.4",
    "react": "^18 || ^19"
  },
  "peerDependenciesMeta": {
    "mobx": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "zshy": {
    "exports": {
      "./package.json": "./package.json",
      "./complex": "./src/complex/index.ts",
      "./format": "./src/format/index.ts",
      "./mobx": "./src/mobx/index.ts",
      "./parser": "./src/parser/index.ts",
      "./react": "./src/react/index.ts",
      "./type-guard": "./src/type-guard/index.ts",
      "./utils/types": "./src/utils/types.ts",
      "./async": "./src/async.ts",
      "./common": "./src/common.ts",
      "./cookie": "./src/cookie.ts",
      "./css": "./src/css.ts",
      "./data": "./src/data.ts",
      "./date-time": "./src/date-time.ts",
      "./device": "./src/device.ts",
      "./encodings": "./src/encodings.ts",
      "./errors": "./src/errors.ts",
      "./file": "./src/file.ts",
      "./html": "./src/html.ts",
      "./id": "./src/id.ts",
      "./imports": "./src/imports.ts",
      "./math": "./src/math.ts",
      "./media": "./src/media.ts",
      "./ms": "./src/ms.ts",
      "./number": "./src/number.ts",
      "./price": "./src/price.ts",
      "./random": "./src/random.ts",
      "./sound": "./src/sound.ts",
      "./storage": "./src/storage.ts",
      "./text": "./src/text.ts",
      "./vibrate": "./src/vibrate.ts",
      "./utility-types": "./src/utility-types.d.ts"
    }
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "dompurify": "^3.2.6",
    "nanoid": "^5.1.5",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@types/node": "^20.17.30",
    "@types/react": "^18",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "@vitest/coverage-istanbul": "^3.1.2",
    "commitfmt": "^1.0.4",
    "js2me-biome-config": "^1.0.3",
    "sborshik": "^1.0.10",
    "jsdom": "^26.1.0",
    "lefthook": "^1.11.16",
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.5",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2",
    "zshy": "^0.4.2"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903",
  "type": "module"
}